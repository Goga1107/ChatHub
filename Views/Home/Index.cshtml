@{
    ViewData["Title"] = "Real-Time Chat";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>

    <style>
        body {
            font-family: "Open Sans", sans-serif;
            background: linear-gradient(135deg, #6e8efb, #a777e3);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0;
        }

        .chat-container {
            width: 450px;
            height: 600px;
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            overflow: hidden;
            padding: 10px;
        }

        .chat-header {
            text-align: center;
            font-weight: bold;
            font-size: 22px;
            padding: 15px 0;
            color: #fff;
            border-bottom: 1px solid rgba(255, 255, 255, 0.3);
        }

        .messages {
            flex-grow: 1;
            overflow-y: auto;
            padding: 10px;
            display: flex;
            flex-direction: column;
        }

        .chat-bubble {
            padding: 10px 15px;
            border-radius: 20px;
            margin-bottom: 10px;
            max-width: 80%;
            word-wrap: break-word;
            animation: fadeIn 0.3s ease-in-out;
        }

        .my-message {
            background-color: #7b5be4;
            color: white;
            align-self: flex-end;
            border-bottom-right-radius: 5px;
        }

        .other-message {
            background-color: rgba(255, 255, 255, 0.8);
            color: #333;
            align-self: flex-start;
            border-bottom-left-radius: 5px;
        }

        .chat-footer {
            display: flex;
            gap: 10px;
            padding: 10px;
            border-top: 1px solid rgba(255, 255, 255, 0.3);
        }

        input {
            border: none;
            border-radius: 10px;
            padding: 10px;
            font-size: 15px;
        }

        #user {
            width: 30%;
        }

        #message {
            width: 100%;
        }

        #sendButton {
            padding: 10px 20px;
            border: none;
            background-color: #fff;
            color: #7b5be4;
            font-weight: bold;
            border-radius: 10px;
            cursor: pointer;
            transition: 0.3s;
        }

            #sendButton:hover {
                background-color: #7b5be4;
                color: white;
            }

        .timestamp {
            font-size: 11px;
            opacity: 0.7;
            margin-top: 3px;
            text-align: right;
        }

       

        ::-webkit-scrollbar {
            width: 6px;
        }

        ::-webkit-scrollbar-thumb {
            background: rgba(255, 255, 255, 0.4);
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="chat-container">
        <div class="chat-header">💬 Real-Time Chat</div>

        <div id="messagesList" class="messages"></div>

        <div class="chat-footer">
            <input type="text" id="user" placeholder="Your name..." />
            <input type="text" id="message" placeholder="Type a message..." />
            <button id="sendButton">Send</button>
        </div>
    </div>

    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/chathub")
            .build();

        connection.start().then(async () => {
            console.log("Connected to chat.");

            // 📜 მოითხოვე წინა მესიჯების ისტორია
            const messages = await connection.invoke("GetMessageHistory");
            messages.forEach(m => {
                addMessageToChat(m.user, m.message, m.sentAt);
            });
        }).catch(err => console.error(err));

        // ახალი მესიჯის მიღება
        connection.on("ReceiveMessage", (user, message) => {
            addMessageToChat(user, message, new Date());
        });

        // UI-ში დამატება
        function addMessageToChat(user, message, time) {
            const msgContainer = document.createElement("div");
            msgContainer.classList.add("chat-bubble");

            const currentUser = document.getElementById("user").value.trim();
            if (user === currentUser) msgContainer.classList.add("my-message");
            else msgContainer.classList.add("other-message");

            const timeStr = new Date(time).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });

            msgContainer.innerHTML = `
                <div><strong>${user}:</strong> ${message}</div>
                <div class="timestamp">${timeStr}</div>
            `;
            document.getElementById("messagesList").appendChild(msgContainer);

            msgContainer.scrollIntoView({ behavior: "smooth" });
        }

        // გაგზავნა
        document.getElementById("sendButton").addEventListener("click", function () {
            const user = document.getElementById("user").value.trim();
            const message = document.getElementById("message").value.trim();

            if (user && message) {
                connection.invoke("SendMessage", user, message).catch(err => console.error(err));
                document.getElementById("message").value = "";
            }
        });

        // Enter-ით გაგზავნა
        document.getElementById("message").addEventListener("keypress", function (e) {
            if (e.key === "Enter") document.getElementById("sendButton").click();
        });
    </script>
</body>
</html>
